<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bitgarden.sanatik" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>صنعتیک</name>
    <description>
    Advertisement App for Indusrties
    مرجع آگهی های معتبر صنعت ایران
  </description>
    <author email="hs.shafiei@gmail.com" href="http://sanatik.ir">
    Sanatik
  </author>
    <icon src="res/icon/icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <platform name="android">
        <icon density="ldpi" src="res/icon/android/ldpi-icon.png" />
        <icon density="mdpi" src="res/icon/android/mdpi-icon.png" />
        <icon density="hdpi" src="res/icon/android/hdpi-icon.png" />
        <icon density="xhdpi" src="res/icon/android/xhdpi-icon.png" />
        <icon density="xxhdpi" src="res/icon/android/xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="res/icon/android/xxxhdpi-icon.png" />
        <splash density="hdpi" src="res/screen/android/hdpi.png" />
        <splash density="ldpi" src="res/screen/android/ldpi.png" />
        <splash density="mdpi" src="res/screen/android/mdpi.png" />
        <splash density="xhdpi" src="res/screen/android/xhdpi.png" />
        <splash density="xxhdpi" src="res/screen/android/xxhdpi.png" />
    </platform>
    <preference name="orientation" value="portrait" />
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <plugin name="cordova-plugin-crop" spec="https://github.com/obeza/cordova-plugin-crop-with-ratio" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.7.1" />
    <plugin name="cordova-plugin-x-toast" spec="^2.7.2" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="com.bez4pieci.cookies" spec="https://github.com/bez4pieci/Phonegap-Cookies-Plugin.git" />
    <plugin name="cordova-plugin-firebase" spec="2.0.5" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <engine name="android" spec="^6.4.0" />
</widget>
